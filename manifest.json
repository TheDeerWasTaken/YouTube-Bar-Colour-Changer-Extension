{
    "name": "YouTube Bar Colour Changer",
    "description": "Creates a switch you can use to change the topbar of the Scratch homepage from blue to red, or back to blue.",
    "version": "2.0",
    "manifest_version": 2,
    "permissions": ["tabs", "storage"],
    "content_scripts":[
        {
          "matches":["https://www.youtube.com/*"],
          "js":["content.js"]
        }
      ],
      "browser_action": {
        "default_icon": "scratch.png",
        "default_popup": "popup.html"
      }
      

  }